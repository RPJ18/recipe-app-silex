{% extends 'layout.twig' %}

{% block title 'Home' %}

{% block content %}
	<div class="w3-container w3-center w3-light-grey w3-padding-32 w3-margin-top w3-margin-bottom">
		<h1 class="w3-text-teal"><i class="fa fa-superpowers"></i> Cookbook</h1>
		<p class="w3-text-teal w3-animate-fading">Become A Real Chef With Our Recipes</p>
	</div>
	
		<div class="w3-center w3-padding-32">
			<div class="container">
				{% for recipe in recipes %}
					<div class="w3-card-2 w3-mobile w3-section card">
						<header class="w3-container w3-teal">
							<a href="{{ url('delete', {'id': recipe.id}) }}" class="w3-right"><i class="fa fa-trash w3-medium w3-padding trash-icon"></i></a>
							<a href="{{ url('show', {'id': recipe.id}) }}" class="w3-left"><i class="fa fa-folder-open w3-medium w3-padding edit-icon"></i></a>
							{# <a href="{{ url('edit') }}t" class="w3-right"><i class="fa fa-edit w3-large w3-padding trash-icon"></i></a> #}
							<h1 class="w3-center">{{ recipe.name }}</h1>
						</header>
						<p class="w3-container">
							<ul class="w3-padding" style="list-style:none">
								<li>{{ recipe.ingredients }}</li>
								<hr>
								<li>{{ recipe.instructions }}</li>
								<hr>
								<li>Preparation time: {{ recipe.time }} Hr</li>	
							</ul>
						</p>
					</div>
				{% endfor %}
			</div>
		</div>
{% endblock %}

